<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/navigation_calculator">

    <fragment
        android:id="@+id/navigation_calculator"
        android:name="com.martinez.simulago.ui.calculator.CalculatorFragment"
        android:label="calculator"
        tools:layout="@layout/fragment_calculator" >
        <action
            android:id="@+id/action_calculator_to_amortization"
            app:destination="@id/amortizationFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.martinez.simulago.ui.home.HomeFragment"
        android:label="home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_amortizationFragment"
            app:destination="@id/amortizationFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.martinez.simulago.ui.settigns.SettingsFragment"
        android:label="settings"
         />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.martinez.simulago.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/amortizationFragment"
        android:name="com.martinez.simulago.ui.amortization.AmortizationFragment"
        android:label="Plan de Pagos"
        tools:layout="@layout/fragment_amortization" >
        <argument
            android:name="amortizationData"
            app:argType="com.martinez.simulago.domain.model.AmortizationEntry[]" />
        <argument
            android:name="simulationName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>