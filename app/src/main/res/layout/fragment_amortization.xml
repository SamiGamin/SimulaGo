<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.amortization.AmortizationFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="Plan de Pagos Detallado"
        android:textAppearance="?attr/textAppearanceTitleLarge" />

    <!-- ===== SECCIÓN DE CABECERAS CORREGIDA ===== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingHorizontal="16dp"
        android:background="?attr/colorSurfaceVariant">

        <!-- Las mismas guías que usamos en la fila -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/header_guideline_col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/header_guideline_col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.41" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/header_guideline_col3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.73" />

        <!-- TextViews de las cabeceras alineados -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mes"
            android:paddingStart="5dp"
            android:gravity="start"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/header_guideline_col1"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Interés"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/header_guideline_col1"
            app:layout_constraintEnd_toStartOf="@id/header_guideline_col2"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Abono Capital"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/header_guideline_col2"
            app:layout_constraintEnd_toStartOf="@id/header_guideline_col3"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saldo Final"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/header_guideline_col3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_amortization"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_amortization_row"
        tools:itemCount="20"/>

</LinearLayout>